#include <math.h>
#include <tf/tf.h>
#include <tf/transform_listener.h>
#include <iostream>

class stuff etc etc


	geometry_msgs::PoseStamped goalPose;
	
  //note: we need to have a case to account for when the robot turns too far, and have it rotate back to the beginning of the sweep
	tf::Quaternion quat;
	quat.setRPY(0, 0, 0.5); //may change .5 to be smaller
	geometry_msgs::Quaternion goalOrientation;
	tf::quaternionTFToMsg(quat, goalOrientation);
	
	goalPose.pose.orientation = goalOrientation;
	goalPose.pose.position.x = pose.pose.position.x;
	goalPose.pose.position.y = pose.pose.position.y;
	goalPose.pose.position.z = pose.pose.position.z;
	goalPose.header = pose.header;
	
	//set+send goal
    move_base_msgs::MoveBaseGoal goal;
    goal.target_pose = goalPose;
    actionClient.sendGoal(goal);
    actionClient.waitForResult();
